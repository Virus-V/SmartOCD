config("compiler_defaults") {
  cflags = [
    "-g",
    "-Os",
    "-fPIC",
    "-pthread",
  ]
}

config("executable_ldconfig") {
  if (!is_mac) {
    ldflags = [
      "-Wl,-rpath=\$ORIGIN/",
      "-Wl,-rpath-link=",
    ]
  }
}
